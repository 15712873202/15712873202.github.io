/********注册详情********/
#main{
	margin-bottom:40px;
	overflow:hidden;
}
.register-box{
  border: 1px solid #00b161;
  padding: 20px;
  border-radius: 10px;
  width: 560px;
  background-image:linear-gradient(180deg,#00b161 0,#f36f20 50%,#e81a62 100%);
  opacity: 0.7;
}
h1 {
  font-size: 40px;
  text-align: center;
  margin: 50px 0;
}

.form-group {
  height: 30px;
  line-height: 30px;
  margin-bottom: 20px;
  font-size: 16px;
}
label {
  width: 90px;
  text-align: right;
}
label span {
  color: #E81A62;
}
input, label, .comment {
  display: inline-block;
  height: 30px;
  height: 30px;
  outline: 0;
  border: 0;
}
.comment {
  display: none;
  padding: 3px 10px;
  background: #eee;
  border-radius: 15px;
  position: relative;
  top: 2px;
}
.form-group input, #bt-register {
  margin: 0 10px;
  padding: 0 15px;
  width: 200px;
  border: 1px solid #999;
  border-radius: 10px;
}
.register-box input:focus {
  border-color: #96D5B9;
  box-shadow: 0 0 3px 3px #96D5B9;
}
.false {
  background: #FF6767;
  color: #fff;
}
.true {
  background: url("../images/ok.png") no-repeat;
  position: relative;
  top: 9px;
}
.code-img{
  height: 30px;
  width: 90px;
  margin-right: 10px;
  vertical-align: middle;
}
.change-img{
  cursor: pointer;
}
#bt-register {
  background: #01AF63;
  color: #fff;
  font-size: 20px;
  border: 0;
  outline: 0;
  line-height: 30px;
}
.modal-register{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0, .3);
  z-index: 9999;
  display: none;
}
.modal-dialog{
  width: 320px;
  margin: 300px auto;
}
.modal-dialog h2{
  text-align: center;
  margin-bottom: 20px;
}
.modal-dialog .btn-danger{
  margin:0 0 0 20px;
}
/*******背景图*********/
.register-bg{
	margin-left:120px;
}

































